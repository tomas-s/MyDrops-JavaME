<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:padding="5dp">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBatteryPercentage"
        android:layout_alignTop="@+id/imageViewBattery"
        android:layout_alignRight="@+id/textViewEspName"
        android:layout_alignEnd="@+id/textViewEspName" />

    <ImageView
        android:layout_height="64dp"
        android:id="@+id/imageViewBattery"
        android:layout_width="64dp"
        android:src="@drawable/battery_4_bars"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textViewEspName"
        android:layout_toLeftOf="@+id/textViewBatteryPercentage"
        android:layout_toStartOf="@+id/textViewBatteryPercentage">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sm_icon_green"
        android:id="@+id/imageViewStatus"
        android:layout_alignBottom="@+id/imageViewBattery"
        android:layout_toRightOf="@+id/imageViewBattery" />

    <TextView
        android:text="ESP Vlozit"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEspName"
        android:layout_width="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="20sp"
        android:ellipsize="marquee"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"></TextView>

    <TextView
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStatus"
        android:layout_alignBottom="@+id/imageViewStatus"
        android:layout_toRightOf="@+id/imageViewStatus"
        android:layout_toEndOf="@+id/imageViewStatus" />

</RelativeLayout>